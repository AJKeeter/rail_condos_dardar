<p id="notice"><%= notice %></p>

<h1>Facilities</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Location</th>
      <th>Location information</th>
      <th>Closing time</th>
      <th>Opening time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.address %></td>
        <td><%= facility.address_2 %></td>
        <td><%= facility.city %></td>
        <td><%= facility.state %></td>
        <td><%= facility.zip %></td>
        <td><%= facility.location %></td>
        <td><%= facility.location_information %></td>
        <td><%= facility.closing_time %></td>
        <td><%= facility.opening_time %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

