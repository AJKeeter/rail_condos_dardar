<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table>
  <thead>
    <tr>
      <th>Number of unit</th>
      <th>Units available</th>
      <th>Unit price</th>
      <th>Unit description</th>
      <th>Number of bathrooms</th>
      <th>Number of rooms</th>
      <th>Sq footage</th>
      <th>Pet friendly</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.number_of_unit %></td>
        <td><%= unit.units_available %></td>
        <td><%= unit.unit_price %></td>
        <td><%= unit.unit_description %></td>
        <td><%= unit.number_of_bathrooms %></td>
        <td><%= unit.number_of_rooms %></td>
        <td><%= unit.sq_footage %></td>
        <td><%= unit.pet_friendly %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

